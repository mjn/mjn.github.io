<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} | Mark Northcott</title>
  <link rel="stylesheet" href="/assets/css/main.css">
  <script>
    // Check for saved theme preference, otherwise use system preference
    const getTheme = () => {
      if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
        return localStorage.getItem('theme');
      }
      if (window.matchMedia('(prefers-color-scheme: light)').matches) {
        return 'light';
      }
      return 'terminal'; // Default
    };

    const applyTheme = (theme) => {
      const html = document.documentElement;
      const themes = ['light-mode', 'everforest-mode', 'catppuccin-mode', 'gruvbox-mode'];
      themes.forEach(t => html.classList.remove(t));
      
      if (theme !== 'terminal') {
        html.classList.add(`${theme}-mode`);
      }
      localStorage.setItem('theme', theme);
    };

    applyTheme(getTheme());
  </script>
</head>
<body class="flex flex-col items-center justify-center min-h-screen p-4 sm:p-8 transition-colors duration-300" data-input-path="{{ page.inputPath }}">
  <div class="w-full max-w-5xl mx-auto border-2 border-terminal-accent rounded-lg p-6 sm:p-10 relative">
    <div class="absolute -top-3 left-6 px-2 bg-terminal-bg text-terminal-accent font-mono font-bold">mark@northcott.io</div>
    <header class="mb-8 font-mono flex justify-between items-center relative">
      <div class="flex items-center">
        <span class="text-terminal-prompt">mark@northcott.io:~$</span>
        <nav class="hidden md:flex ml-2">
          <a href="/" class="text-terminal-accent hover:underline ml-2">home</a>
          <a href="/blog/" class="text-terminal-accent hover:underline ml-4">blog</a>
          <a href="/experience/" class="text-terminal-accent hover:underline ml-4">experience</a>
        </nav>
      </div>

      <div class="flex items-center space-x-4">
        <!-- Desktop Theme Selector -->
        <div class="hidden md:flex relative items-center font-mono text-terminal-text">
          <button id="theme-trigger" class="hover:tui-inverse focus:tui-inverse outline-none px-1 transition-colors duration-200">
            [theme: <span class="current-theme-name">tokyo-night</span>]
          </button>
          <div id="theme-menu" class="hidden tui-dropdown-menu mt-1">
            <div class="tui-dropdown-item" data-value="terminal">tokyo-night</div>
            <div class="tui-dropdown-item" data-value="light">light</div>
            <div class="tui-dropdown-item" data-value="everforest">everforest</div>
            <div class="tui-dropdown-item" data-value="catppuccin">catppuccin</div>
            <div class="tui-dropdown-item" data-value="gruvbox">gruvbox</div>
          </div>
        </div>

        <!-- Mobile Menu Trigger -->
        <button id="mobile-menu-trigger" class="md:hidden hover:tui-inverse focus:tui-inverse outline-none px-1 transition-colors duration-200">
          [menu]
        </button>
      </div>

      <!-- Mobile Dropdown Menu -->
      <div id="mobile-menu" class="hidden absolute top-full right-0 mt-2 z-50 tui-dropdown-menu min-w-[200px]">
        <div class="flex flex-col p-4 space-y-4">
          <nav class="flex flex-col space-y-2">
            <a href="/" class="text-terminal-accent hover:underline">home</a>
            <a href="/blog/" class="text-terminal-accent hover:underline">blog</a>
            <a href="/experience/" class="text-terminal-accent hover:underline">experience</a>
          </nav>
          <div class="border-t border-terminal-accent opacity-30"></div>
          <div class="relative flex flex-col font-mono text-terminal-text">
            <button id="theme-trigger-mobile" class="text-left hover:tui-inverse focus:tui-inverse outline-none px-1 transition-colors duration-200">
              [theme: <span class="current-theme-name">tokyo-night</span>]
            </button>
            <div id="theme-menu-mobile" class="hidden tui-dropdown-menu mt-1 left-0 relative w-full border-t-0 border-x-0 border-b-0">
              <div class="tui-dropdown-item" data-value="terminal">tokyo-night</div>
              <div class="tui-dropdown-item" data-value="light">light</div>
              <div class="tui-dropdown-item" data-value="everforest">everforest</div>
              <div class="tui-dropdown-item" data-value="catppuccin">catppuccin</div>
              <div class="tui-dropdown-item" data-value="gruvbox">gruvbox</div>
            </div>
          </div>
        </div>
      </div>
    </header>
    <main>
      {{ content | safe }}
    </main>
    <footer class="mt-16 text-sm text-terminal-text opacity-50 font-mono">
      &copy; 2025 Mark Northcott
    </footer>
  </div>

  <script>
    const themeTrigger = document.getElementById('theme-trigger');
    const themeMenu = document.getElementById('theme-menu');
    const themeNameDisplays = document.querySelectorAll('.current-theme-name');
    const themeItems = document.querySelectorAll('.tui-dropdown-item');
    
    // Mobile elements
    const mobileMenuTrigger = document.getElementById('mobile-menu-trigger');
    const mobileMenu = document.getElementById('mobile-menu');
    const themeTriggerMobile = document.getElementById('theme-trigger-mobile');
    const themeMenuMobile = document.getElementById('theme-menu-mobile');

    const themeNames = {
      'terminal': 'tokyo-night',
      'light': 'light',
      'everforest': 'everforest',
      'catppuccin': 'catppuccin',
      'gruvbox': 'gruvbox'
    };

    // Initialize display name
    const currentTheme = getTheme();
    themeNameDisplays.forEach(el => el.textContent = themeNames[currentTheme] || currentTheme);

    // Toggle desktop menu
    if(themeTrigger) {
      themeTrigger.addEventListener('click', (e) => {
        e.stopPropagation();
        themeMenu.classList.toggle('hidden');
      });
    }

    // Toggle mobile menu
    if(mobileMenuTrigger) {
      mobileMenuTrigger.addEventListener('click', (e) => {
        e.stopPropagation();
        mobileMenu.classList.toggle('hidden');
      });
    }

    // Toggle mobile theme menu
    if(themeTriggerMobile) {
      themeTriggerMobile.addEventListener('click', (e) => {
        e.stopPropagation();
        themeMenuMobile.classList.toggle('hidden');
      });
    }

    // Handle selection
    themeItems.forEach(item => {
      item.addEventListener('click', () => {
        const theme = item.getAttribute('data-value');
        applyTheme(theme);
        themeNameDisplays.forEach(el => el.textContent = themeNames[theme]);
        
        // Close all menus
        if(themeMenu) themeMenu.classList.add('hidden');
        if(mobileMenu) mobileMenu.classList.add('hidden');
        if(themeMenuMobile) themeMenuMobile.classList.add('hidden');
      });
    });

    // Close on click outside
    document.addEventListener('click', (e) => {
      if (themeMenu && !themeMenu.contains(e.target) && !themeTrigger.contains(e.target)) {
        themeMenu.classList.add('hidden');
      }
      if (mobileMenu && !mobileMenu.contains(e.target) && !mobileMenuTrigger.contains(e.target)) {
        mobileMenu.classList.add('hidden');
      }
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        if(themeMenu) themeMenu.classList.add('hidden');
        if(mobileMenu) mobileMenu.classList.add('hidden');
      }
    });
  </script>
</body>
</html>
